<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/platform_item"
    android:layout_width="180dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@drawable/card_shape">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/platform_image_background"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="5dp"
        android:src="@drawable/video_game_background_image"
        app:siRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/platform_name"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/platform_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/platform_name"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@id/platform_image_background"
        app:layout_constraintEnd_toEndOf="@id/platform_image_background"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>